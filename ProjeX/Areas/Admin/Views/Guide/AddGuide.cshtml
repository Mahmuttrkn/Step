@model EntityLayer.Concrete.Guide

@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Ekleme Sayfası</h1>


<form method="post">

    <div class="form-group">
        @Html.Label("Name Surname")
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Description")
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Choose Image")
        <input type="file" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Status")
        <input type="text" asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Instagram")
        <input type="text" asp-for="Link1" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Twitter")
        <input type="text" asp-for="Link2" class="form-control" />
    </div>
    <br />
    <button class="btn btn-outline-success">SAVE</button>
</form>