@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Roller</h1>
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Yetki</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>
                <td><a href="/Admin/Role/DeleteRol/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-danger">Tanımlı Rol Bulunmamaktadır.</div>
}
<br />
<br />
<a class="btn btn-outline-success" href="/Admin/Role/CreateRole/">Yeni Rol Girişi</a>

