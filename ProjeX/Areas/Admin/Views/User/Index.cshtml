@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>User Page</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Username</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Image</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Phone Number</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="hidden">@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td><img src="@item.ImageUrl" /></td>
            <td>@item.Email</td>
            <td>@item.Gender</td>
            <td>@item.PhoneNumber</td>
            <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/User/UpdateUser/@item.Id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Admin/User/CommentUser/@item.Id" class="btn btn-info">Yorumlar</a></td>
            <td><a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-secondary">Tur Geçmişi</a></td>


        </tr>
    }
</table>
<a href="/Login/SignUp" class="btn btn-outline-primary">New User</a>
