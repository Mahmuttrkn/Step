@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Comment List</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Username</th>
        <th>Surname</th>
        <th>Date</th>
        <th>Destination</th>
        <th>Content</th>
        <th>Status</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CommentID</td>
            <td>@item.CommentUserName</td>
            <td>@item.CommentUserSurname</td>
            <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Destination.City</td>
            <td>@item.CommentContent</td>
            <td>@item.CommentState</td>
            <td><a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>

