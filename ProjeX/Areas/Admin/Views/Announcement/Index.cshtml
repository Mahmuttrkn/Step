@model List<DTOLayer.DTOS.Announcement.AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnnouncementID</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td><a href="/Admin/Announcement/AnnouncementDelete/@item.AnnouncementID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/Announcement/AnnouncementUpdate/@item.AnnouncementID" class="btn btn-dark">Güncelle</a></td>
            <td><a href="#" class="btn btn-info">Detay</a></td>

        </tr>

    }

</table>
<a class="btn btn-outline-success" href="/Admin/Announcement/AnnouncementAdd">Yeni Duyuru Tanımla</a>
