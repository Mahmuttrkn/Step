@model DTOLayer.DTOS.ContactDTOs.SendMessageDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!doctype html>
<html lang="zxx">
<body>
    <!--header-->
    
    <!-- //header -->
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container py-2">
                <h2 class="title">Bize Ulaşın</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index/">Home</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Contact </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!-- contact-form -->
    <section class="w3l-contact" id="contact">
        <div class="contact-infubd py-5">
            <div class="container py-lg-3">
                <div class="contact-grids row">
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <h5>İletişim Bilgilerimiz</h5>
                                <p class="mt-3 mb-4">
                                    Bizlere 7/24 Mail üzerinden ulaşabilirsiniz.
                                </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">Email:</h6>
                                <p>
                                    <a href="mahmut@hotmail.com">
                                        mahmut@hotmail.com
                                    </a>
                                </p>
                                <h6 class="mt-4">Adresimiz:</h6>
                                <p> 78-80 Upper St Giles St. Norwich NR2 1LT United Kingdom.</p>
                                <h6 class="mt-4">GSM:</h6>
                                <p class="margin-top"><a href="tel:+44-255-366-88">0 543 327 06 57</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                        <form method="post" class="signin-form">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" name="Name" id="w3lName" placeholder="Your Name*" class="contact-input" asp-for="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="Mail" id="w3lSender" placeholder="Your Email*" class="contact-input" required="" asp-for="Mail" />
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Subject" id="w3lSubect" placeholder="Subject*" class="contact-input" asp-for="Subject" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea name="MessageBody" id="w3lMessage" placeholder="Type your message here*" required="" asp-for="MessageBody"></textarea>
                                <span asp-validation-for="MessageBody" class="text-danger"></span>
                            </div> 
                            <div class="text-right">
                                <button class="btn btn-style btn-primary">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
                </div>
                <div class="map mt-5 pt-md-5">
                    <h5 style="margin-left:40px;">Map</h5>
                   <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3060.943109444198!2d32.770593999999996!3d39.897906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d3463134269c5b%3A0x9546e6029ac214b4!2sInnova%20IT%20Solutions!5e0!3m2!1sen!2str!4v1691065418805!5m2!1sen!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                            style="border:0" allowfullscreen=""></iframe>
                </div>
            </div>
    </section>
</body>

</html>

